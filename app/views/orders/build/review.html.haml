- content_for :title, "Review your order"

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Review
                      order
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.active
                  .step-badge 1
                  Review order
                .step
                  .step-badge 2
                  Billing address
                .step
                  .step-badge 3
                  Shipping information
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Selected Items =
            / ==========
            
            - if @cart.cart_items.empty?
              .table.table-items
                %h4 Your cart is empty
            - else
              %table.table.table-items
                %thead
                  %tr
                    %th{colspan: "2"} Item
                    %th
                      .align-center
                    %th
                      .align-right Price
                %tbody
                  = render :partial => 'orders/cart'
            %hr/
            - unless @cart.cart_items.empty?
              %p.right-align
                In the next step you will choose your billing address  
                %a.btn.higher.bold#estimate-delivery-service-price ESTIMATE SHIPPING  
                %a.btn.higher.bold#update_quantity UPDATE
                = link_to "CONTINUE", next_wizard_path, :class => 'btn btn-primary higher bold'
    / /main content
/ /container
= render 'orders/delivery_service_prices/estimate/modal'