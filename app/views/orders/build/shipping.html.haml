- content_for :title, 'Select a shipping method'
.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Shipping
                      address
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Review order', wizard_path(:review)
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Billing addresss', wizard_path(:billing)
                .step.active
                  .step-badge 3
                  Shipping information
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Shipping addr form =
            / ==========

            = form_for @shipping_address, :url => wizard_path, :html => { :method => :put, :class => 'form-horizontal form-checkout shipping_address' } do |f|
              .control-group
                %label.control-label
                  Use billing address?
                .controls
                  %input.use_billing_address{type: 'checkbox'}
              .control-group
                = f.label :first_name, :class => 'control-label' do
                  First name
                  %span.red-clr.bold *
                .controls
                  = f.text_field :first_name, :class => 'span4 use_billing', :id => 'shipping_first_name'
                  %div= @order.bill_address.first_name
                  = errors_for @shipping_address, :first_name
              .control-group
                = f.label :last_name, :class => 'control-label' do
                  Last name
                  %span.red-clr.bold *
                .controls
                  = f.text_field :last_name, :class => 'span4 use_billing', :id => 'shipping_last_name'
                  %div= @order.bill_address.last_name
                  = errors_for @shipping_address, :last_name
              = fields_for @order do |ff|
                .control-group
                  = ff.label :email, :class => 'control-label' do
                    Email
                    %span.red-clr.bold *
                  .controls
                    = ff.text_field :email, :class => 'span4', :id => 'email'
                    = errors_for @order, :email
              .control-group
                = f.label :telephone, :class => 'control-label' do
                  Telephone
                .controls
                  = f.text_field :telephone, :class => 'span4 use_billing', :id => 'shipping_telephone'
                  %div= @order.bill_address.telephone
              .control-group
                = f.label :company, :class => 'control-label' do
                  Company
                .controls
                  = f.text_field :company, :class => 'span4 use_billing', :id => 'shipping_company'
                  %div= @order.bill_address.company
              .control-group
                = f.label :address, :class => 'control-label' do
                  Street address
                  %span.red-clr.bold *
                .controls
                  = f.text_field :address, :class => 'span4 use_billing', :id => 'shipping_address'
                  %div= @order.bill_address.address
                  = errors_for @shipping_address, :address
              .control-group
                = f.label :city, :class => 'control-label' do
                  City
                  %span.red-clr.bold *
                .controls
                  = f.text_field :city, :class => 'span4 use_billing', :id => 'shipping_city'
                  %div= @order.bill_address.city
                  = errors_for @shipping_address, :city
              .control-group
                = f.label :postcode, :class => 'control-label' do
                  Postcode
                  %span.red-clr.bold *
                .controls
                  = f.text_field :postcode, :class => 'span4 use_billing', :id => 'shipping_postcode'
                  %div= @order.bill_address.postcode
                  = errors_for @shipping_address, :postcode
              .control-group
                = f.label :county, :class => 'control-label' do
                  County
                .controls
                  = f.text_field :county, :class => 'span4 use_billing', :id => 'shipping_county'
                  %div= @order.bill_address.county
              .control-group
                = f.label :country, :class => 'control-label' do
                  Country
                  %span.red-clr.bold *
                .controls.update_shipping
                  = f.select(:country, options_for_select(Country.all.map { |country| [country.name, country.name] }), { :include_blank => 'Please select...'})
                  = errors_for @shipping_address, :country
              .shipping-methods{ 'data-tier' => "#{@calculated_tier}" }
                .control-group
                  = f.label :shipping_id, :class => 'control-label' do
                    Shipping options
                    %span.red-clr.bold *
                  .controls
                    %p.shipping_notice Select a shipping country to view the available shipping options.
              .control-group
                .controls
                  = errors_for @order, :shipping_id
              %hr/
              %p.right-align
                In the next step you will choose a payment method
                = f.submit 'CONTINUE', :class => 'btn btn-primary higher bold'
    / /main content
/ /container