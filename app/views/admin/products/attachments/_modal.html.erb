<div aria-hidden="true" aria-labelledby="attachmentModalLabel" class="modal fade" id="attachment-form" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for [:admin, @product, @attachment], url: url, html: { role: 'form', id: 'amend_attachment', 'data-method' => method }, remote: true do |f| %>
        <div class="json" id="errors">
          <ul></ul>
        </div>
        <%= render partial: 'shared/loading', format: [:html] %>
        <div class="modal-header">
          <h3 id="attachmentModalLabel">
            <%= @attachment.id.nil? ? t('products.attachments.modal.add_image') : t('products.attachments.modal.edit_image') %>
          </h3>
        </div>
        <div class="modal-body">
          <fieldset class="widget widget-content widget-last">
            <%= image_tag @attachment.file.square, width: 100, height: 100 unless @attachment.file.nil? %>
            <div class="form-group">
              <%= f.label t('products.attachments.modal.file_label') %>
              <%= f.file_field :file, :class => 'form-control' %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.check_box :default_record %>
                <%= t('products.attachments.modal.file_label') %>
              </label>
            </div>
          </fieldset>
        </div>
        <div class="modal-footer">
          <button class="btn btn-orange btn-large" data-dismiss="modal" type="button"><%= t('modal.close_button') %></button>
          <%= f.submit t('products.attachments.modal.submit_button'), :class => 'btn btn-blue btn-large' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
