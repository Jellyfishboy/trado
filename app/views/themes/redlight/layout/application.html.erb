<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%= "#{yield :title} - #{Store::settings.name}" %></title>
        <meta name="description" content="<%= yield :meta_description %>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <%= stylesheet_link_tag "themes/#{Store::settings.theme.name}/application", "data-turbolinks-track" => true %>
        <link rel="stylesheet" href="stylesheets/font.css" media="screen">
        <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        <%= include_gon(watch: true) %>
        <%= javascript_include_tag "modernizr/modernizr", "data-turbolinks-track" => true %>
    </head> 
    <body>
        <div class="parent-container">
            <div class="mp-pusher" id="mp-pusher">
                <%= render partial: theme_presenter.page_template_path('shared/mobile'), format: [:html] %>
                <%= render partial: theme_presenter.page_template_path('shared/header'), format: [:html] %>

                <div class="main">    
                    <%= yield %>
                </div>
                <%= render partial: theme_presenter.page_template_path('shared/footer'), format: [:html] %>
            </div>
        </div>
        <%= javascript_include_tag "themes/#{Store::settings.theme.name}/application", "data-turbolinks-track" => true  %>
        <% if Store::settings.ga_active %>
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

                ga('create', gon.trackingCode, {'cookieDomain': 'none'});
                ga('send', 'pageview');
            </script>
        <% end %>
        <div id="search-overlay">
            <form action="search.html">
                <div id="search-input">
                    <input type="text"/>
                    <i class="icon-search"></i>
                </div>
            </form>
            <i class="icon-close"></i>
        </div>
    </body>
</html>
